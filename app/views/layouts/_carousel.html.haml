/ Carousel
#mainCarousel.carousel.carousel-dark.slide.carousel-fade(data-bs-ride="carousel" style="height: 80vh;")
    / Indicators/dots
    - if false
        .carousel-indicators
            %button.active(data-bs-slide-to="0" data-bs-target="#mainCarousel" type="button")
            %button(data-bs-slide-to="1" data-bs-target="#mainCarousel" type="button")
            %button(data-bs-slide-to="2" data-bs-target="#mainCarousel" type="button")
            %button(data-bs-slide-to="3" data-bs-target="#mainCarousel" type="button")
    / The slideshow/carousel
    .carousel-inner.bg-white
        .carousel-item.active
            .text-center
                = image_tag "01_main_services.jpg", class: 'img-fluid'
        .carousel-item
            .text-center
                = image_tag "05_main_services.jpg", class: 'img-fluid'
        .carousel-item
            .text-center
                = image_tag "06_main_services.jpg", class: 'img-fluid'
        .carousel-item
            .text-center
                = image_tag "03_main_services.jpg", class: 'img-fluid'
    / Left and right controls/icons
    - if false 
        %button.carousel-control-prev(data-bs-slide="prev" data-bs-target="#mainCarousel" type="button")
            %span.carousel-control-prev-icon(aria-hidden="true")
            %span.visually-hidden Anterior
        %button.carousel-control-next(data-bs-slide="next" data-bs-target="#mainCarousel" type="button")
