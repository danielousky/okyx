!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Okyx
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags
    = favicon_link_tag 'own_resources/logo_icon.svg'
  %body.bg-primary-okyx
    
    
    %nav.navbar.justify-content-center.sticky-top.bg-secondary-okyx.py-2
      .bg-primary-okyx.w-100.px-0.py-1
        .mb-2= render '/layouts/publish'
        = render '/layouts/search_nav'
    .container-fluid
      = render "/layouts/flashes"
    - clase = (params['search'].nil? and params['location'].nil? and params['area_id'].nil?) ? '' : 'container'

    %div{class: clase}= yield
    
    = render '/layouts/footer'